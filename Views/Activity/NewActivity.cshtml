
@model bbelt.Models.ActivityValid

<div class="navb">
    <div class="row">
        <div class="col-md-12">
            <div class="brand">Activityhub</div>
            <ul class="links-left">
                <li><a href="/home">Home</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="new-activity">
    <div class="row">
        <div class="col-md-8">
            <h2>Add new Activity!</h2>
            <form class="form-horizontal" asp-controller="Activity" asp-action="AddNewActivity" method="POST">
                <div class="well">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="Title"></label>
                        <div class="col-sm-8">
                            <span class="acti-err" asp-validation-for="Title"></span>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="DateAt"></label>
                        <div class="col-sm-8">
                            <span class="acti-err" asp-validation-for="DateAt"></span>
                            <input type="datetime-local" class="form-control" asp-for="DateAt">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="Duration"></label>
                        <div class="col-sm-6">
                            <span class="acti-err" asp-validation-for="Duration"></span>
                            <input type="number" min="1" value="1" class="form-control" asp-for="Duration">
                        </div>
                        <div class="col-sm-offset-2 col-sm-4">
                            <span class="acti-err" asp-validation-for="DurationInc"></span>
                            <select class="form-control" asp-for="DurationInc">
                                <option value="Minute">Minutes</option>
                                <option value="Hour">Hours</option>
                                <option value="Day">Days</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="acti-err" asp-validation-for="Description"></span>
                        <label class="col-sm-2 control-label" asp-for="Description"></label>
                        <div class="col-sm-8">
                            <textarea rows="10" class="form-control" asp-for="Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>